
{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "importHelpers": true,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2020",
    "sourceMap": false,
    "allowJs": false,
    "strict": true,
    "strictNullChecks": false
  },
  "exclude": ["**/dist/**/*.d.ts", "dist", "node_modules"]
}
{
  "name": "@nostr-ts/web",
  "version": "0.0.5",
  "description": "nostr in the browser",
  "author": "Franz Geffke <m@f-a.nz>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/franzos/nostr-ts"
  },
  "keywords": [
    "nostr",
    "blockchain",
    "crypto"
  ],
  "type": "module",
  "scripts": {
    "prebuild": "rimraf dist",
    "tsc": "pnpm run build",
    "build": "pnpm run prebuild && node build.js && tsc -p tsconfig.json --emitDeclarationOnly",
    "check": "pnpm dlx madge --extensions ts --circular src/",
    "tests": "jest"
  },
  "dependencies": {
    "@noble/curves": "^1.1.0",
    "@noble/hashes": "^1.3.1",
    "@nostr-ts/common": "workspace:*",
    "nanoid": "^3.0.0",
    "idb": "^7.1.1"
  },
  "devDependencies": {
    "@anatine/esbuild-decorators": "^0.2.19",
    "@types/jest": "^29.5.3",
    "esbuild": "^0.17.18",
    "esbuild-node-externals": "^1.7.0",
    "fake-indexeddb": "^4.0.2",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.7.0",
    "rimraf": "^3.0.2",
    "tslib": "2.5.0",
    "typescript": "5.1.6"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/*"
  ]
}

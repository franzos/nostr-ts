{
  "name": "@nostr-ts/node",
  "version": "0.0.5",
  "description": "nostr on the backend: node.js implementation of the nostr protocol",
  "author": "Franz Geffke <m@f-a.nz>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/franzos/nostr-ts"
  },
  "keywords": [
    "nostr",
    "blockchain",
    "crypto"
  ],
  "type": "module",
  "scripts": {
    "prebuild": "rimraf dist",
    "tsc": "pnpm run build",
    "build": "pnpm run prebuild && node build.js && tsc -p tsconfig.json --emitDeclarationOnly",
    "check": "pnpm dlx madge --extensions ts --circular src/",
    "tests": "jest"
  },
  "dependencies": {
    "@noble/curves": "^1.6.0",
    "@noble/hashes": "^1.5.0",
    "@nostr-ts/common": "workspace:*",
    "node-fetch": "^3.3.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@anatine/esbuild-decorators": "^0.2.19",
    "@types/jest": "^29.5.13",
    "@types/node": "^20.16.13",
    "@types/ws": "^8.5.12",
    "esbuild": "^0.17.19",
    "esbuild-node-externals": "^1.15.0",
    "jest": "^29.7.0",
    "rimraf": "^3.0.2",
    "tslib": "2.6.2",
    "typescript": "5.2.2"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/*"
  ]
}
